<div class="container">
  <div class="row">
    <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %> alert-dismissible fade in" id="flash">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= value %>
        </div>
    <% end %>
  </div>
</div>