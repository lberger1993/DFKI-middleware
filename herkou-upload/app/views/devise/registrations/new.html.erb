<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group row">
            <%= f.label :email, class: 'col-md-3 col-form-label' %>
            <div class="col-md-9">
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, class: 'col-md-3 col-form-label' %>

            <div class="col-md-9">
              <% if @minimum_password_length %>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum", class: 'form-control' %>
              <% else %>
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
              <% end %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password_confirmation, class: 'col-md-3 col-form-label' %>
            <div class="col-md-9">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-12">
              <%= f.submit "Sign up", class: 'btn btn-primary' %>
            </div>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>