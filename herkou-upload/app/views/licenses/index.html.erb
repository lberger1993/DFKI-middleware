
<div class="container">
  <div class="well">
    <div class="row">
      <% @licenses.each do |license| %>

          <% if @order_item.present? %>
              <%= form_for @order_item, remote: true do |f| %>
                  <div class="col-md-4">
                    <div class="card text-xs-center">
                      <div class="card-block">
                        <h4 class="card-title"><%= license.title %></h4>
                        <p class="card-text"><%= license.description %></p>
                        <p class="card-text"><strong><%= license.duration_as_string %></strong></p>

                        <%= link_to 'Details', license_path(license), class: 'btn btn-primary' %>
                        <%= f.submit 'Add to cart', class: 'btn btn-primary' %>
                      </div>

                      <div class="card-footer text-success">
                        <strong><%= number_to_currency license.price %></strong>
                      </div>
                    </div>

                    <%= f.hidden_field :quantity, value: 1, class: "form-control", min: 1 %>
                    <%= f.hidden_field :license_id, value: license.id %>
                  </div>
              <% end %>
          <% else %>
              <div class="col-md-4">
                <div class="card text-xs-center">
                  <div class="card-block">
                    <h4 class="card-title"><%= license.title %></h4>
                    <p class="card-text"><%= license.description %></p>
                    <p class="card-text"><strong><%= license.duration_as_string %></strong></p>

                    <%= link_to 'Details', license_path(license), class: 'btn btn-primary' %>
                  </div>

                  <div class="card-footer text-success">
                    <strong><%= number_to_currency license.price %></strong>
                  </div>
                </div>
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>