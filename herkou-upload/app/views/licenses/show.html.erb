<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h1><%= @license.title %></h1>

      <div class="well well-lg">
        <div class="col-md-12">
          <p>
            <%= @license.description %>
          </p>
        </div>
        <div class="col-md-12">
          <p>
            Duration: <strong><%= @license.duration_as_string %></strong>
          </p>
        </div>
        <div class="col-md-12">
          <p>
            Price: <strong><%= number_to_currency @license.price %></strong>
          </p>
        </div>

        <div class="form-group row">
          <div class="col-sm-6">
            <% if @order_item.present? %>
                <%= form_for @order_item, remote: true do |f| %>
                    <%= f.hidden_field :quantity, value: 1, class: "form-control", min: 1 %>
                    <%= f.hidden_field :license_id, value: @license.id %>
                    <%= f.submit 'Add to cart', class: 'btn btn-primary' %>
                <% end %>
            <% end %>
          </div>

          <div class="col-sm-6">
            <%= link_to 'Back to all licenses', licenses_path, class: 'pull-right btn btn-info' %>
          </div>
        </div>

      </div>
    </div>
  </div>


</div>